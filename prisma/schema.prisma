generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id             Int      @id @default(autoincrement())
  type           String
  isrc           String
  title          String
  length         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  updateDate     String
  externalId     String
  creationDate   String
  productionDate String
  likedBy        User?    @relation(fields: [userId], references: [id])
  userId         Int?
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  liked    Track[]
}
